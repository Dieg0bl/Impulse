# =============================================================================
# IMPULSE LEAN v1 - Environment Variables Template
# =============================================================================
# Copy this file to .env and configure your local development environment

# APPLICATION
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080
APP_TIMEZONE=Europe/Madrid

# DATABASE
DATABASE_URL=jdbc:mysql://localhost:3306/impulse_lean?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC&createDatabaseIfNotExist=true
DATABASE_USER=impulse_user
DATABASE_PASSWORD=impulse_password

# JWT SECURITY
JWT_SECRET=impulse-lean-2025-super-secret-key-for-development-only-change-in-production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# EMAIL (Development - MailHog)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
# Production email (Gmail example)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=demo@impulse.com
EMAIL_SMTP_PASS=demo-password

# FILE STORAGE
EVIDENCE_STORAGE_PATH=./storage/evidences
MAX_FILE_SIZE=10MB

# PAYMENT PROCESSING
PAYMENT_PROVIDER=stripe
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# LEGAL & COMPLIANCE
CONSENT_ENFORCED=true
PRESS_KIT_PUBLIC=true

# FEATURES
EXPERIMENTS_ENABLED=true

# EXTERNAL SERVICES (Optional)
# PAYPAL_CLIENT_ID=...
# PAYPAL_CLIENT_SECRET=...

# MONITORING (Optional)
# SENTRY_DSN=https://...
# DATADOG_API_KEY=...

# PRODUCTION ONLY
# SSL_ENABLED=true
# SSL_KEYSTORE_PATH=/app/ssl/keystore.p12
# SSL_KEYSTORE_PASSWORD=...

# ================================
# IMPULSE EDITORCONFIG
# ================================

root = true

# ================================
# DEFAULT SETTINGS
# ================================

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ================================
# BACKEND (Java/Spring Boot)
# ================================

[*.java]
indent_size = 4
max_line_length = 120

[*.xml]
indent_size = 2

[*.properties]
indent_size = 2
max_line_length = 100

[*.sql]
indent_size = 2
max_line_length = 120

# ================================
# FRONTEND (TypeScript/React)
# ================================

[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 100

[*.{css,scss,sass,less}]
indent_size = 2

[*.{html,htm}]
indent_size = 2

[*.json]
indent_size = 2

# ================================
# CONFIGURATION FILES
# ================================

[*.{yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 2

[*.ini]
indent_size = 2

# ================================
# DOCUMENTATION
# ================================

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.txt]
max_line_length = 80

# ================================
# SCRIPTS
# ================================

[*.{sh,bash,zsh}]
indent_size = 2
end_of_line = lf

[*.{ps1,bat,cmd}]
indent_size = 4
end_of_line = crlf

# ================================
# DOCKER
# ================================

[Dockerfile*]
indent_size = 2

[docker-compose*.yml]
indent_size = 2

# ================================
# MAKEFILE
# ================================

[Makefile]
indent_style = tab
indent_size = 4

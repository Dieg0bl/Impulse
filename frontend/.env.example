# IMPULSE LEAN v1 - Environment Configuration
# Phase 8: Media Storage System Configuration

# =============================================================================
# API CONFIGURATION
# =============================================================================
VITE_API_BASE=http://localhost:8080
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# =============================================================================
# AUTHENTICATION
# =============================================================================
VITE_JWT_EXPIRATION=86400
VITE_REFRESH_TOKEN_THRESHOLD=300

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_BILLING_ON=true
VITE_MEDIA_UPLOAD_ON=true
VITE_ANTIVIRUS_SCAN_ON=true
VITE_EXIF_STRIPPING_ON=true
VITE_THUMBNAIL_GENERATION_ON=true

# =============================================================================
# MEDIA STORAGE CONFIGURATION
# =============================================================================
VITE_STORAGE_PROVIDER=MINIO
VITE_STORAGE_BUCKET=impulse-media
VITE_STORAGE_REGION=us-east-1
VITE_STORAGE_PUBLIC_URL=http://localhost:9000
VITE_STORAGE_CDN_URL=

# Media Upload Limits
VITE_MAX_FILE_SIZE_MB=100
VITE_MAX_FILES_PER_UPLOAD=10
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
VITE_ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/ogg,video/avi,video/mov
VITE_ALLOWED_DOCUMENT_TYPES=application/pdf,text/plain,application/msword

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
VITE_ANTIVIRUS_ENGINE=CLAMAV
VITE_SCAN_TIMEOUT=60000
VITE_QUARANTINE_ON_SUSPICIOUS=true

# EXIF Stripping
VITE_STRIP_LOCATION_DATA=true
VITE_STRIP_CAMERA_DATA=true
VITE_STRIP_ALL_METADATA=false

# =============================================================================
# THUMBNAIL CONFIGURATION
# =============================================================================
VITE_THUMBNAIL_WIDTH=300
VITE_THUMBNAIL_HEIGHT=300
VITE_THUMBNAIL_QUALITY=80
VITE_THUMBNAIL_FORMAT=jpg

# =============================================================================
# PRESIGNED URL CONFIGURATION
# =============================================================================
VITE_PRESIGNED_URL_EXPIRATION=3600
VITE_UPLOAD_URL_EXPIRATION=1800
VITE_DOWNLOAD_URL_EXPIRATION=300

# =============================================================================
# CDN & CACHING
# =============================================================================
VITE_ENABLE_CDN=false
VITE_CDN_CACHE_TTL=86400
VITE_BROWSER_CACHE_TTL=3600

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
VITE_LOG_LEVEL=info
VITE_ENABLE_ANALYTICS=true
VITE_SENTRY_DSN=

# Google Analytics
VITE_GA_TRACKING_ID=
VITE_GA_ANONYMIZE_IP=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
VITE_MOCK_UPLOADS=false
VITE_BYPASS_ANTIVIRUS=false
VITE_SKIP_EXIF_STRIPPING=false
VITE_DEBUG_MEDIA_PIPELINE=false

{
    "java.configuration.workspaceFolders": [
        "backend"
    ],
    "java.compile.nullAnalysis.mode": "automatic",
    
    // üö´ Prevenir auto-restauraci√≥n de archivos problem√°ticos
    "files.hotExit": "off",
    "workbench.editor.restoreViewState": false,
    "workbench.startupEditor": "none",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "timeline.excludeSources": ["git-history"],
    
    // üóÇÔ∏è Excluir archivos del explorador
    "files.exclude": {
        "**/.vscode/tasks.json": true,
        "**/*.tmp": true,
        "**/*.temp": true,
        "**/node_modules": true,
        "**/target": true
    },
    
    // ‚òï Control de Java para evitar archivos extra
    "java.autobuild.enabled": false,
    "java.import.generatesMetadataFilesAtProjectRoot": false,
    "java.clean.workspace": true,
    "java.configuration.updateBuildConfiguration": "automatic"
}